<!doctype html>
<html lang="en">
<head>
    <title>Feedem - meal planning for the rest of us..</title>
    <meta name="description" content="quick and easy meal planning and shopping list creation" />
	%= include 'site/head'
	%= include 'mixpanel'
  
    <!-- record subscription -->
  	<script type="text/javascript">mixpanel.track('set-password-form')</script>
  	<script type="text/javascript">mixpanel.alias('<%= $user->{email} %>');</script>
</head>
<body>
	<div class="container">
		%= include 'site/header'
		<div id="content">
			<div class="hero-unit">
				% if ($error){
					<p class="lead"><%= $error %></p>
				% }
				<form action="/set-password" method="post" class="form-horizontal">
					<div class="control-group">
						<label class="control-label">Email</label>
						<div class="controls">
							<input type="text" name="username" value="<%= $user->{email} %>">
						</div>
						<label class="control-label">Set your new password</label>
						<div class="controls">
							<input type="text" name="password">
							<button type="submit" class="btn btn-primary">Set Password</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</body>
</html>
