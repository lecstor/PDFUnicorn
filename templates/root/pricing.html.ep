<!doctype html>
<html lang="en">
<head>
    <title>PDFUnicorn - pricing plans</title>
	%= include 'site/head'
	%= include 'mixpanel'
  
    <!-- record main page view -->
  	<script type="text/javascript">mixpanel.track('view-pricing-page')</script>
</head>

<body>
	%= include 'site/header'
	
	<style>
	.pdfu-plan {
		margin: 20px;
		
		margin-left: 0;
		margin-right: 0;
		background-color: #fff;
		border-width: 1px;
		border-color: #ddd;
		border-radius: 10px;
		box-shadow: none;
		
		padding: 2px 0 16px 0;
	}
	</style>

    <div class="container">

	  <div class="jumbotron clearfix">
	  
        %= include 'site/signup_prompt'

        % foreach my $plan (@$plans){
            <div class="col-sm-3">
                <div class="pdfu-plan" <%== $plan->{recommended} ? 'style="background-color: #E0FFE0"' : '' %>>
                    <form action="/sign-up" method="post">
                        <input type="hidden" name="selected_plan" value="<%= $plan->{id} %>" />
                        <h3 style="text-align: center"><%= $plan->{name} %></h3>
                        <h2 style="text-align: center">$<%= $plan->{price} %>/month</h2>
                        <div style="text-align: center"><%= $plan->{units} %> units/month</div>
                        <div style="text-align: center">
                            <button type="submit" class="btn btn-primary btn-lg">Start <%= $plan->{name} %> free trial</button>
                        </div>
                    </form>         
                </div>
            </div>
        % }
        
	    <h4 class="text-success" style="text-align: center; margin: 40px 0 0 0">a unit is a page of a PDF document or an image in a page</h4>
      </div>
    </div>

    %= include 'site/foot'

</body>
</html>
