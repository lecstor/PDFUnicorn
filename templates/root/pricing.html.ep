<!doctype html>
<html lang="en">
<head>
    <title>PDFUnicorn - pricing plans</title>
	%= include 'site/head'
	%= include 'mixpanel'
  
    <!-- record main page view -->
  	<script type="text/javascript">mixpanel.track('view-pricing-page')</script>
</head>

<body>
	%= include 'site/header'
	
	<style>
	.pdfu-plan {
		margin: 20px;
		
		margin-left: 0;
		margin-right: 0;
		background-color: #fff;
		border-width: 1px;
		border-color: #ddd;
		border-radius: 10px;
		box-shadow: none;
		
		padding: 2px 0 16px 0;
	}
	</style>

    <div class="container">

	  <div class="jumbotron clearfix">
	  
        %= include 'site/signup_prompt'

        <div class="col-sm-3">
        <div class="pdfu-plan">
        	<h3 style="text-align: center">Small</h3>
        	<h2 style="text-align: center">$19/month</h2>
        	<div style="text-align: center">500 units/month</div>
      	</div>
      	</div>
        <div class="col-sm-3">
        <div class="pdfu-plan">
        	<h3 style="text-align: center">Medium</h3>
        	<h2 style="text-align: center">$49/month</h2>
        	<div style="text-align: center">1,500 units/month</div>
      	</div>
      	</div>
        <div class="col-sm-3">
        <div class="pdfu-plan">
        	<h3 style="text-align: center">Large</h3>
        	<h2 style="text-align: center">$99/month</h2>
        	<div style="text-align: center">5,000 units/month</div>
      	</div>
      	</div>
        <div class="col-sm-3">
        <div class="pdfu-plan">
        	<h3 style="text-align: center">X-Large</h3>
        	<h2 style="text-align: center">$199/month</h2>
        	<div style="text-align: center">20,000 units/month</div>
      	</div>
      	</div>
	    <h4 class="text-success" style="text-align: center; margin: 40px 0 0 0">a unit is a page of a PDF document or an image in a page</h4>
      </div>
    </div>

    %= include 'site/foot'

</body>
</html>
