<!doctype html>
<html lang="en">
<head>
    <title>PDFUnicorn - online PDF generator</title>
    %= include 'site/head'
    %= include 'mixpanel'
  
    <!-- record main page view -->
    <script type="text/javascript">mixpanel.track('view-main-page')</script>
</head>

<body>
    %= include 'site/header'

    <div class="container">
    
        <div class="row row-offcanvas row-offcanvas-left">
        
            %= include 'admin/side_nav'   
        
            <div class="col-xs-12 col-sm-9">
            
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Your Current Plan</h3>
                    </div>
                    <div class="panel-body" id="stripe-subscription">
                        <%= $app_user->{plan}{name} %>
                    </div>
                </div>            
            
            
            
                <p class="pull-right visible-xs">
                    <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
                </p>
                
                <form action="" method="POST">
                    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="<%= $config->{stripe}{public_api_key} %>"
                        data-amount="<%= $app_user->{plan}{price} %>"
                        data-name="PDFUnicorn"
                        data-description="PDFUnicorn Subscription"
                        data-panel-label="Subscribe to PDFUnicorn"
                        data-billing-address="true"
                        data-email="<%= $app_user->{email} %>"
                        data-label="Activate Billing">
                    </script>
                </form>
                
            </div>
        
        </div>
    </div>
    
    %= include 'site/foot'

    <script id="stripe-subscription-tmpl" type="template">
        <table class="table table-striped table-hover">
            <tbody><tr><td>
                plan name: {{subscription.plan.name}} amount: {{subscription.plan.amount}} start: {{subscription.start}}
            </td></tr></tbody>
        </table>
    </script>
    

</body>
</html>
