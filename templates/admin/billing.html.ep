<!doctype html>
<html lang="en">
<head>
    <title>PDFUnicorn - online PDF generator</title>
    %= include 'site/head'
    %= include 'mixpanel'
  
    <!-- record main page view -->
    <script type="text/javascript">mixpanel.track('view-main-page')</script>
</head>

<body>
    %= include 'site/header'

    <div class="container">
    
        <div class="row row-offcanvas row-offcanvas-left">
        
            %= include 'admin/side_nav'   
        
            <div class="col-xs-12 col-sm-9">
                <p class="pull-right visible-xs">
                    <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
                </p>
                
                <form action="" method="POST">
                    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="<%= $config->{stripe}{public_api_key} %>"
                        data-amount="2000"
                        data-name="PDFUnicorn"
                        data-description="PDFUnicorn Subscription"
                        data-panel-label="Subscribe to PDFUnicorn"
                        data-billing-address="true"
                        data-email="<%= $app_user->{email} %>"
                        data-label="Subscribe"
                    </script>
                </form>
                
            </div>
        
        </div>
    </div>
    
    %= include 'site/foot'

</body>
</html>
