<!doctype html>
<html lang="en">
<head>
    <title>PDFUnicorn - online PDF generator</title>
	%= include 'site/head'
	%= include 'mixpanel'
  
    <!-- record main page view -->
  	<script type="text/javascript">mixpanel.track('view-apikey-page')</script>
</head>

<body>
	%= include 'site/header'

    <div class="container">
    
        <div class="row row-offcanvas row-offcanvas-left">
        
	    	%= include 'admin/side_nav'   
	    
	    	<div class="col-xs-12 col-sm-9">
                <p class="pull-right visible-xs">
                    <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
                </p>
                
                <h4>Your API Keys</h4>
                
                <table class="table table-striped table-hover">
                    <tbody>
                    <thead>
                        <th>Name</th>
                        <th>Key</th>
                        <th>Deactivate</th>
                        <th>Delete</th>
                    </thead>
                    % foreach my $doc (@$keys){
                        <tr>
                            <td><%= $doc->{name} %></td>
                            <td><%= $doc->{key} %></td>
                            <td id="activate-apikey-container" data-key="<%= $doc->{key} %>"></td>
                            <td id="delete-apikey-container" data-key="<%= $doc->{key} %>"></td>
                        </tr>
                    % }
                    </tbody>
                </table>
	    	</div>
    	
    	</div>
    </div>
    
    <script id="deactivate-apikey-button" type="template">
        <button type="button" class="btn btn-warning btn-xs">Deactivate</button>
    </script>
    <script id="reactivate-apikey-button" type="template">
        <button type="button" class="btn btn-success btn-xs">Reactivate</button>
    </script>
    <script id="delete-apikey-button" type="template">
        <button type="button" class="btn btn-danger btn-xs">Delete</button>
    </script>
    
    %= include 'site/foot'

</body>
</html>
