
<form action="/sign-up" method="post" class="form-signin" role="form">
    <h2 class="form-signin-heading">Sign Up</h2>
    <input name="email" type="email" class="form-control" placeholder="Email address" value="<%= $email %>" required autofocus>
    <input name="name" type="text" class="form-control" placeholder="Name, nickname, moniker, handle.." value="<%= $name %>">
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
</form>
