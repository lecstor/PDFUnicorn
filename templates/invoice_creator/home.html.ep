<!doctype html>
<html lang="en">
<head>
    <title>PDFUnicorn - online PDF generator</title>
	%= include 'site/head'
	%= include 'mixpanel'
  
    <!-- record main page view -->
  	<script type="text/javascript">mixpanel.track('view-home-page')</script>
</head>

<body>
	%= include 'site/header'

    <div class="container">
        <h1>Online Invoice Maker</h1>
        
        <form role="form">
            <div class="row">
                <div class="col-xs-12 col-md-8">
                    <label for="invoice_sender">Invoice Sender</label>
                    <textarea class="form-control" rows="5" name="invoice_sender"></textarea>
                </div>
                <div class="col-xs-12 col-md-4">
                    Logo
                </div>
            </div>
            
            <div class="row">
                <div class="col-xs-12 col-md-8">
                    <label for="invoice_recipient">Invoice Recipient</label>
                    <textarea class="form-control" rows="5" name="invoice_recipient"></textarea>
                </div>
                <div class="col-xs-12 col-md-4">
                    <label for="invoice_number">Invoice Number</label>
                    <input type="number" class="form-control" placeholder="Text input" name="invoice_number" />
                    <label for="invoice_date">Invoice Date</label>
                    %# add picker https://github.com/Eonasdan/bootstrap-datetimepicker
                    <input type="date" class="form-control" placeholder="Text input" name="invoice_date" />
                </div>
            </div>
            
        </form>        
            
    </div>
    
    %= include 'site/foot'

</body>
</html>
